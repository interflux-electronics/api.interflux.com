require 'test_helper'

module <%= @version.classify %>
  module <%= @scope.classify %>
    class <%= @name.classify.singularize %>Test < ApplicationController
      # Public users should be able to fetch all <%= @name.humanize.downcase.pluralize %>
      test '1' do
        assert_can_fetch_all true, 5, 6
      end

      # Public users should be able to fetch one <%= @name.humanize.downcase.singularize %> by ID
      test '2' do
        assert_can_fetch_one_by_id true
      end

      # Public users should be able to fetch one <%= @name.humanize.downcase.singularize %> by slug
      test '3' do
        assert_can_fetch_one_by_slug true
      end

      # Public users should NOT be able to create <%= @name.humanize.downcase.pluralize %>
      test '4' do
        assert_can_create false
      end

      # Public users should NOT be able to update <%= @name.humanize.downcase.pluralize %>
      test '5' do
        assert_can_update false
      end

      # Public users should NOT be able to delete <%= @name.humanize.downcase.pluralize %>
      test '6' do
        assert_can_delete false
      end

      # Fetching bogus IDs should return 404
      test '7' do
        assert_cannot_fetch_bogus_id
      end

      # Fetching bogus slugs should return 404
      test '8' do
        assert_cannot_fetch_bogus_slug
      end

